 <div class="custom-sidebar">
   <div class="tp-title">
    Your Cart <span class="cart-item">Item <%= line_item_count(@order) %></span>
  </div>
  <div class="scroll-bx">
    <ul class="cart-list">
      <%= render partial: 'shared/line_item', collection: @order.line_items %>
    </ul>
  </div>

  <div class="sub-total-bttm">
    <ul class="sub-tb-bx">
      <!-- <li>$30 minimun </li> -->
      <li class="sb">Subtotal <h4><sup><%= @order.display_total %></sup></h4></li>
    </ul>
    <%= form_for @order, url: update_cart_path, html: { id: 'update-cart' } do |order_form| %>
      <%= button_tag class: 'btn', id: 'checkout-link', name: 'checkout' do %>
        <%= Spree.t(:checkout) %>
      <% end %>
    <% end %>
  </div>
</div>