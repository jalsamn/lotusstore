<% variant = line_item.variant %>
<li>
  <div class="lf-bx">
    <div class="icon-pic">
      <span class="cer"><%= line_item.quantity %></span>
      <% if variant.images.length == 0 %>
        <%= link_to mini_image(variant.product), variant.product %>
      <% else %>
        <%= link_to image_tag(variant.images.first.attachment.url(:mini)), variant.product %>
      <% end %>
    </div>
    <div class="cnt-dic">
      <p><%= link_to line_item.name, product_path(variant.product) %></p>
      <span><%= line_item.single_money.to_html %> <sub>each</sub></span>
    </div>
  </div>

  <div class="price-bx">
    <%= line_item.display_amount.to_html unless line_item.quantity.nil? %>
  </div>
</li>